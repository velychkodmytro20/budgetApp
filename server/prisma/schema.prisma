generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  clothes
  food
  medicine
  restaurants
  sport
  taxi
  transfers
  utilities  
}

enum Role {
  admin
  user
}

enum Status {
  active
  inactive
}

enum Type {
  income
  outcome
}



model User {
  id   String @id @default(uuid()) @unique 
  firstName String 
  lastName String 
  password String
  email String  @unique
  phone String?  @unique
  status Status @default(active)
  role    Role     @default(user)
  lastLoginAt DateTime?  @db.Date @default(now())
  createdAT DateTime? @db.Date @default(now())
  updatedAt DateTime?  @db.Date @default(now())

  budgetRecord BudgetRecord[] 
  
}

model BudgetRecord {
  id String @id @default(uuid()) @unique
  type Type
  category Category
  amount Int
  user User @relation(fields: [userId], references: [id])
  userId String  @default(uuid())
  
}

